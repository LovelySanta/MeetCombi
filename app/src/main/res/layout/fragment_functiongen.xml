<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"

    android:background="@color/colorFunctionGen_Background"

    android:orientation="vertical"
    android:id="@+id/functionGen"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"

        android:text="@string/functionGen_frequency"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingStart="0dip"
            android:paddingEnd="10dip"

            >

            <Button
                android:id="@+id/functionGen_FrequencyButtonPlus"

                android:layout_width="@dimen/fuctionGen_Btn"
                android:layout_height="@dimen/fuctionGen_Btn"
                android:padding='0dip'

                android:text="@string/functionGen_plusSign"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/functionGen_FrequencyButtonMinus"

                android:layout_width="@dimen/fuctionGen_Btn"
                android:layout_height="@dimen/fuctionGen_Btn"
                android:padding='0dip'


                android:text="@string/functionGen_minusSign"/>

        </LinearLayout>

        <TextView
            android:id="@+id/functionGen_FrequencyDisplay"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"

            android:background="@color/colorFunctionGen_DisplayBackground"

            android:gravity="end"
            android:textAlignment="gravity"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"

        android:text="@string/functionGen_amplitude"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingStart="0dip"
            android:paddingEnd="10dip"
            >

            <Button
                android:id="@+id/functionGen_AmplitudeButtonPlus"

                android:layout_width="@dimen/fuctionGen_Btn"
                android:layout_height="@dimen/fuctionGen_Btn"
                android:padding='0dip'

                android:text="@string/functionGen_plusSign"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/functionGen_AmplitudeButtonMinus"

                android:layout_width="@dimen/fuctionGen_Btn"
                android:layout_height="@dimen/fuctionGen_Btn"
                android:padding='0dip'


                android:text="@string/functionGen_minusSign"/>

        </LinearLayout>

        <TextView
            android:id="@+id/functionGen_AmplitudeDisplay"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"

            android:background="@color/colorFunctionGen_DisplayBackground"

            android:gravity="end"
            android:textAlignment="gravity"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"

        android:text="@string/functionGen_offset"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingStart="0dip"
            android:paddingEnd="10dip"
            >

            <Button
                android:id="@+id/functionGen_OffsetButtonPlus"

                android:layout_width="@dimen/fuctionGen_Btn"
                android:layout_height="@dimen/fuctionGen_Btn"
                android:padding='0dip'

                android:text="@string/functionGen_plusSign"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/functionGen_OffsetButtonMinus"

                android:layout_width="@dimen/fuctionGen_Btn"
                android:layout_height="@dimen/fuctionGen_Btn"
                android:padding='0dip'


                android:text="@string/functionGen_minusSign"/>

        </LinearLayout>

        <TextView
            android:id="@+id/functionGen_OffsetDisplay"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"

            android:background="@color/colorFunctionGen_DisplayBackground"

            android:gravity="end"
            android:textAlignment="gravity"
            />

    </LinearLayout>

    <Button
        android:id="@+id/functionGen_SetActive"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding='0dip' />


</LinearLayout>